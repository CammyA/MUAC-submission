<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_mc_sign_up"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.hmkcode.com.MUAC_CW_Cameron_Anderson.mcSignUp"
    android:orientation="vertical">

    <TextView
        android:text="Sign up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSignup"
        android:gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Display3"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:text="Enter a Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUsername"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/user_name"
        android:maxWidth="@dimen/activity_vertical_margin"
        android:maxLines="1"
        android:inputType="text"
        android:isScrollContainer="false">

        <requestFocus/>
    </EditText>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <TextView
        android:text="Enter a Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassword"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:lines="1"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Button
        android:text="Signup!"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
